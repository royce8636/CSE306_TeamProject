import RPi.GPIO as GPIO
import time

# Define the motor control pins
AIN1 = 2
AIN2 = 3
STBY = 4
BIN1 = 17
BIN2 = 27

# Define the motor speeds
LEFT_SPEED = 50
RIGHT_SPEED = 50

# Define the duration to run the motors in seconds
DURATION = 5

# Set up the GPIO pins
GPIO.setmode(GPIO.BCM)
GPIO.setup(AIN1, GPIO.OUT)
GPIO.setup(AIN2, GPIO.OUT)
GPIO.setup(STBY, GPIO.OUT)
GPIO.setup(BIN1, GPIO.OUT)
GPIO.setup(BIN2, GPIO.OUT)
GPIO.output(STBY, GPIO.HIGH)

# Set the motor directions to go forward
GPIO.output(AIN1, GPIO.HIGH)
GPIO.output(AIN2, GPIO.LOW)
GPIO.output(BIN1, GPIO.HIGH)
GPIO.output(BIN2, GPIO.LOW)

# Set the motor speeds
left_pwm = GPIO.PWM(AIN1, 100)
right_pwm = GPIO.PWM(BIN1, 100)
left_pwm.start(LEFT_SPEED)
right_pwm.start(RIGHT_SPEED)

# Wait for the specified duration
time.sleep(DURATION)

# Stop the motors
left_pwm.stop()
right_pwm.stop()

# Disable the motors
GPIO.output(STBY, GPIO.LOW)

# Clean up the GPIO pins
GPIO.cleanup()
